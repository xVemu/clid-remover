{
    "name": "fbclid remover",
    "version": "1.1",
    "description": "Removes ?fbclid from link when opening page from Facebook.",
    "manifest_version": 2,
    "author": "Vemu (Kamil Kras)",
    "icons": {
        "16": "img/16x.png",
        "24": "img/24x.png",
        "32": "img/32x.png",
        "48": "img/48x.png",
        "64": "img/64x.png",
        "128": "img/128x.png"
    },
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}